md-content(layout="column" layout-align="start start" layout-wrap layout-fill)
    .lsm-list(flex)
        h2(ng-if="posts") {{ 'site.latest_posts' | translate }}
        h2(ng-if="posts.length === 0") {{ 'site.no_latest_posts' | translate }}
        .lsm-list-item(layout='column' layout-align="start center" ng-repeat='post in posts')
            a(ng-href='/posts/{{ post.slug }}')
                .lsm-list-item-text(flex)
                    h3 {{ post.title }}
                    p.metatext {{'author.on' | translate}} {{ post.created | date : 'dd.MM.yy' }}
                    p.smalltext {{post.abstract | limitTo: 140}}...
