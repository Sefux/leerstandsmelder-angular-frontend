div(layout="column" layout-align="start start")
    md-list.lsm-list(flex)
        md-subheader.md-no-sticky
            h2(ng-if="locations.length > 0") {{ "locations.recent_activity" | translate }} {{author.in}} {{region.title}}
            h2(ng-if="locations.length === 0") {{ "locations.no_recent_activity" | translate }} {{author.in}} {{region.title}}
        md-list-item.lsm-list-item.lsm-list-item-small(layout='row' layout-align="start center" ng-repeat='location in locations')
            .lsm-list-item-img(ng-if="location.thumb_url")
                img(ng-if='location.thumb_url' ng-src='{{location.thumb_url}}')
            .lsm-list-item-text.md-list-item-text(flex)
                a(ng-href='{{ urlbase + (region.slug || region.uuid) + "/" + location.slug  }}' )
                    h3 {{ location.title }}
                    p
                        | {{location.artworkType | translate}} {{ ' ' }}
                        span(ng-if='location.owner') / {{location.owner | translate}}
