include ../mixins/_form
include ../mixins/_buttons
include ../mixins/_layout
include ../mixins/_style

md-content(layout='column' layout-align='start center' flex layout-padding)
  div(flex layout-align='stretch')
    md-card(layout-align='stretch' flex)
        md-card-header
            md-card-header-text(layout-align="center center")
                +headline('posts.edit_post')
        md-card-content()
            div(layout-padding)
                div(layout="column" layout-xs="column")
                    +input('text', 'post.title', 'posts.title', null, null)
                    +input('text', 'post.slug', 'posts.slug', null, null)
                    textarea(markdown-editor ng-model='post.body')
                    div(layout="row" layout-padding)
                        div(flex layout-padding)
                            div(layout-gt-xs="row")
                                +input('checkbox','post.static','posts.static', null, null)
        md-card-actions( layout-align="start center"  style="align-self: stretch;")
            div(layout="row" layout-align="space-around start")
                +button('actions.cancel','cancel()','md-raised','',null,'{{ urlbase }}admin/posts/list')
                span(flex)
                +button_fab('actions.submit','submit()','md-warn','fa-check')
