include ..//mixins/_form
include ..//mixins/_media
include ..//mixins/_buttons
include ..//mixins/_layout
include ..//mixins/_style

+layout('column','start center',true)
    div
    +headline('users.admin_edit')
    md-card()
        md-toolbar(md-scroll-shrink)
            .md-toolbar-tools
                +layout('row','center center','padding')
                    +headline('users.settings')
        md-card-content
            +layout('row','center center')
                +content('column', 'start center')
                    +input('text', 'user.nickname', 'users.username', null, null)
                    +input('password', 'user.password', 'users.password', null, null)
                +content('column', 'start center')
                    +input('email', 'user.email', 'users.email', null, null)
                    +input('password','user.password_confirm', 'users.password_confirm', null, null)
            +layout('row','start start')
                +content('column', 'start start')
                    +input('checkbox','user.message_me','users.message_me','_sys.message_me',null,true)
                    +input('checkbox','user.notify','users.notify','_sys.notify',null,true)
            +layout('row','center center')
                +content('column', 'start center')
                    +input('checkbox','user.confirmed','users.confirmed','_sys.confirmed',null,true)
                    +input('checkbox','user.blocked','users.blocked','_sys.blocked',null,true)
                +content('column', 'start center')
                    +input('text', 'user.last_login', 'users.last_login', null, null)
                    +input('text', 'user.failed_logins', 'users.failed_logins', null, null)
            +layout('row','start start')
                +content('column', 'start start')
                    +select('user.scope', '_sys.userScope', false, 'users.scope', true)

        .md-actions(layout="row" layout-align="start end")
            +button('actions.cancel',null,'md-raised',null,null,'/admin/users/list')
            span(flex)
            +button_fab('actions.submit','submit()','md-warn','fa-check')