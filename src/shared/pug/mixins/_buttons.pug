mixin button(TEXT, _ng_click, _class, icon, _ng_if, _ng_href)
	- var _i18n_field_key = "{{'" + TEXT + "' | translate }}"
	//- var _i18n_field_key = "{{" + TEXT + "}}"

	md-button(
	class=_class
	ng-click=_ng_click
	aria-label=_i18n_field_key
	title=_i18n_field_key
	ng-if=_ng_if
	ng-href=_ng_href
	)
		if icon
			md-icon
				span.fa.fa-fw(class=icon)
		span= _i18n_field_key

