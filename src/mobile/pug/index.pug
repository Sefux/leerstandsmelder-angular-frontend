doctype html
html(lang='en')
    head
        meta(http-equiv='X-UA-Compatible' content='IE=edge')
        meta(http-equiv='Content-Type' content='text/html; charset=utf-8')
        meta(name='format-detection' content='telephone=no')
        meta(name='msapplication-tap-highlight' content='no')
        meta(name='viewport' content='user-scalable=no, initial-scale=1, maximum-scale=1, minimum-scale=1, width=device-width')
        meta(http-equiv='Content-Security-Policy' content="default-src 'self' http://* https://* data:; style-src 'self' 'unsafe-inline'; script-src http://* https://* 'self' 'unsafe-inline' 'unsafe-eval'")
        // meta(name="fragment" content="!")
        // base(href='/')

        title Leerstandsmelder - Für mehr Transparenz und neue Möglichkeitsräume in der Stadt
        meta(name='description' content='Meldet Leerstände! Mit dem Leerstandsmelder können wir gemeinsam Informationen austauschen. Leerstände können auf der Leerstandskarte von allen NutzerInnen direkt und unkompliziert eingetragen werden.')
        link(rel='stylesheet', href='css/leerstandsmelder-frontend-deps.css?build=16050301')
        link(rel='stylesheet', href='css/leerstandsmelder-frontend-mobile.css?build=16050301')
        style(type='text/css').
            .ng-cloak {
                display: none !important;
            }
    body.ng-cloak(layout='column' spellcheck='false' ng-cloak)
        header
            include partials/_navbar
            div(ng-controller="Widgets.Alerts")
                div(ng-repeat="alert in alerts" type="alert.status" close="closeAlert($index)")
                    span {{ alert.message }}
        md-content.main_container.scrollbar_fix(role='main' flex layout="row" layout-xs="column" layout-wrap layout-fill layout-align="start stretch" ng-view cg-busy="{promise:promise, message:'Loading...', templateUrl:'partials/_busy.html',minDuration:0}")

        div(msg-popup popup-id='relaunch')
        scripts
            script(src='cordova.js')
            script(src='js/leerstandsmelder-apiclient-web.js?build=16050301')
            script(src='js/leerstandsmelder-angular-dependencies.min.js?build=16050301')
            script(src='js/leerstandsmelder-angular-frontend.min.js?build=16061002')